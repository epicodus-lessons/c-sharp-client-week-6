@{
    ViewData["Title"] = "Details";
}

<h1>Animal Info:</h1>
<ul>
    <li>ID: @Model.AnimalId</li>
    <li>Name: @Model.Name</li>
    <li>Species: @Model.Species</li>
    <li>Age: @Model.Age</li>
    <li>Gender: @Model.Gender</li>
</ul>
<br>

<h1>Edit Info:</h1>
<form action="/Animals/Details/@(Model.AnimalId)" method="post">
  <label for="name">Animal's Name</label>
  <input id="name" name="name" type="text">
  <label for="species">Animal's Species</label>
  <input id="species" name="species" type="text">
  <label for="age">Animal's Age</label>
  <input id="age" name="age" type="number">
  <label for="gender">Animal's Gender</label>
  <input id="gender" name="gender" type="text">
  <button type="submit">Go!</button>
</form>
<br>

<a href="/Animals"><p>Return</p></a>